    function show() {
      const xyzInputValue = document.getElementById("xyz");
      const id = xyzInputValue.value;
      const data = JSON.parse(localStorage.getItem(id));
      const result = document.getElementById("result");

      if (data) {
        result.innerHTML = ` ${data.name} ‡§Ü‡§™‡§ï‡•Ä ‡§∂‡§ø‡§ï‡§æ‡§Ø‡§§ ‡§™‡§∞ ‡§®‡§ø‡§Æ‡•ç‡§®‡§≤‡§ø‡§ñ‡§ø‡§§ ‡§ï‡§∞‡§µ‡§æ‡§à‡§Ç ‡§π‡•ã ‡§ö‡•Å‡§ï‡•Ä ‡§π‡•à - 
        ‡§∏‡§Æ‡•ç‡§¨‡§Ç‡§ß‡§ø‡§§ ‡§Ö‡§ß‡§ø‡§ï‡§æ‡§∞‡•Ä, ‡§∂‡•ç‡§∞‡•Ä ‡§Ö‡§Æ‡§® ‡§∂‡§∞‡•ç‡§Æ‡§æ ‡§ï‡•ã ‡•©‡•¶ ‡§¶‡§ø‡§®‡•ã ‡§Æ‡•á ‡§Ü‡§™‡§ï‡•Ä ‡§∏‡§Æ‡§∏‡•ç‡§Ø‡§æ ‡§ï‡§æ ‡§®‡§ø‡§µ‡§æ‡§∞‡§£ ‡§ï‡§∞‡§®‡•á ‡§ï‡•á ‡§®‡§ø‡§∞‡•ç‡§¶‡•á‡§∂ ‡§¶‡•á ‡§¶‡§ø‡§Ø‡•á ‡§ó‡§è ‡§π‡•à : ${data.complainInfo}`;
      } else {
        result.innerHTML = "‡§Ö‡§≠‡•Ä ‡§Ü‡§™‡§ï‡•Ä ‡§∂‡§ø‡§ï‡§æ‡§Ø‡§§ ‡§™‡§∞ ‡§ï‡§∞‡§µ‡§æ‡§à‡§Ç ‡§π‡•ã‡§®‡•Ä ‡§¨‡§æ‡§ï‡•Ä ‡§π‡•à ‡§ï‡•É‡§™‡•ç‡§Ø‡§æ ‡§ï‡•Å‡§õ ‡§¶‡§ø‡§® ‡§¨‡§æ‡§¶ ‡§¶‡•ã‡§¨‡§æ‡§∞‡§æ ‡§ú‡§æ‡§ö ‡§ï‡§∞‡•á‡•§";
      }
    }

    function createNew(event) {
      event.preventDefault();

      const formData = new FormData(event.target);
      const data = Object.fromEntries(formData.entries());
      const id = generateRandomId(5);
      data.id = id;

      console.log({ data });

      localStorage.setItem(id, JSON.stringify(data));

      const firstPage = document.getElementById('firstpage');
      const result = document.getElementById('result');
      firstPage.style.display = "none";

      result.innerHTML = `‡§Ü‡§™‡§ï‡•Ä ‡§∂‡§ø‡§ï‡§æ‡§Ø‡§§ ‡§¶‡§∞‡•ç‡§ú ‡§ï‡§∞ ‡§≤‡•Ä ‡§ó‡§à‡•§ ‡§Ü‡§™‡§ï‡•Ä ID ‡§π‡•à: ${id}`;
    }

    function generateRandomId(length = 10) {
      const characters = 'ABCDEFGHIJKLMNOPQRSTUVWXYZabcdefghijklmnopqrstuvwxyz0123456789';
      let randomId = '';

      for (let i = 0; i < length; i++) {
        const randomIndex = Math.floor(Math.random() * characters.length);
        randomId += characters[randomIndex];
      }

      return randomId;
    }
  </script>
